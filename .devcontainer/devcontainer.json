{
	"name": "AI Tuber Dev Container",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "saint-graph",
	"workspaceFolder": "/workspaces/ai-tuber",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-azuretools.vscode-docker",
				"mhutchie.git-graph"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.analysis.extraPaths": [
					"/workspaces/ai-tuber/src"
				]
			}
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	"postCreateCommand": "git config --global --add safe.directory /workspaces/ai-tuber && echo 'DevContainer Ready!'"
}