{
	"name": "AI Tuber Dev Container",
	"dockerComposeFile": [
		"../docker-compose.yml",
		"../docker-compose.devcontainer.yml"
	],
	"service": "dev",
	"workspaceFolder": "/app",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-azuretools.vscode-docker",
				"mhutchie.git-graph",
				"opentofu.vscode-opentofu"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.analysis.extraPaths": [
					"/app/src"
				]
			}
		}
	},
	"containerEnv": {
		"DOCKER_API_VERSION": "1.45"
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	"postCreateCommand": "git config --global --add safe.directory /app && echo 'DevContainer Ready!'"
}